        <div id="main">
            <div id="scrolling-box">
                <div id="scrolling-content">
                    <% details.forEach((data) => { %>
                    <%- data.image === "screenshot.gif" ? "" : include('scrolling-image', {detail: data, imageSizes: imageSizes}); %>
                    <% }); details.forEach((data) => { %>
