                    <% }); %>
                </div>
            </div>
            <div class="after-scrolling">
                <div class="title-box">
                    <div class="title-content">
                        <picture>
                            <source srcset="images/webp/logo.webp" type="image/webp">
                            <source srcset="images/logo.png" type="image/png">
                            <img class="title-image" src="images/logo.png" alt="CraftOS-PC logo">
                        </picture>
                        <script>
                            // polyfill for min/max
                            const browserInfo = getBrowserInfo(navigator.userAgent);
                            if (!(
                                ((browserInfo.sName == "Chrome" || browserInfo.sName == "MSIE") && browserInfo.sVersion >= "79") ||
                                (browserInfo.sName == "Firefox" && browserInfo.sVersion >= "75") ||
                                (browserInfo.sName == "Opera" && browserInfo.sVersion >= "66") ||
                                (browserInfo.sName == "Safari" && browserInfo.sVersion >= "11.3"))) {
                                const vw = Math.max(document.documentElement.clientWidth || 0, window.innerWidth || 0);
                                const vh = Math.max(document.documentElement.clientHeight || 0, window.innerHeight || 0);
                                document.getElementsByClassName("title-image")[0].style.height = Math.max(0.15 * vw, 0.15 * vh);
                                document.getElementsByClassName("title-image")[0].style.marginTop = Math.min(-0.075 * vw, -0.075 * vh);
                            }
                        </script>
                        <h1 class="title-title">CraftOS-PC</h1>
                        <h2 class="title-subtitle">A fast and feature-filled ComputerCraft emulator</h2>
                        <h4 class="title-version">Current Version: <span id="current-version"><%= tag %></span></h4>
                        <a href="https://github.com/MCJack123/craftos2/" id="download-link">
                            <div class="download-button">
                                <div id="download-button">
                                    <span class="download-icon"><i class="fab fa-github"></i></span>
                                    <span class="download-text">&nbsp;View on GitHub&nbsp;<span id="download-platform"></span></span>
                                </div>
                                <h5 id="mac-universal-note" style="display: none">CraftOS-PC runs natively on Apple Silicon Macs.</h5>
                            </div>
                        </a>
                        <h5><span id="download-source">or get the source on <a href="https://github.com/MCJack123/craftos2">GitHub</a>&nbsp;&nbsp;|&nbsp;&nbsp;</span><a href="docs/getting-started">Getting Started</a>&nbsp;&nbsp;|&nbsp;&nbsp;<a href="docs/">Documentation</a></h5>
